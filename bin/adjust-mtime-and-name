#!/usr/bin/env bash

set -euo pipefail

if [ $# -eq 0 ]
then
    echo "Adjust modification timestamp and names of files based solely on their names" >&2
    echo "Patterns: CCYYMMDD.HHmmss, DD.MM.CCYY.HH.MM.ss, CCYY.MMDDHH, CCYY.MM.DD.+HH.mm.ss" >&2
    echo "Usage: $0 [FILES...]" >&2
    exit 1
fi

exit_code=0

for filepath in "$@"
do
    ## Make sure filepath points to a file

    if
        [[ ! -e "$filepath" ]]
    then
        echo "File does not exist: $filepath" >&2
        exit_code=1
        continue
    elif
        [[ ! -f "$filepath" ]]
    then
        echo "Not a file: $filepath" >&2
        exit_code=1
        continue
    fi

    ## Separate filepath into directory and filename

    directory=$(dirname "$filepath")
    filename=$(basename "$filepath")

    ## Extract timestamp from filename

    if
        [[ "$filename" =~ [0-9]{8}[^0-9][0-9]{6} ]]
    then
        timestamp=`echo "$filename" | sed -E 's/.*([0-9]{8})[^0-9]([0-9]{4})([0-9]{2}).*/\1\2.\3/'`
    elif
        [[ "$filename" =~ [0-9]{2}[^0-9][0-9]{2}[^0-9][0-9]{4}[^0-9][0-9]{2}[^0-9][0-9]{2}[^0-9][0-9]{2} ]]
    then
        timestamp=`echo "$filename" | sed -E 's/.*([0-9]{2})[^0-9]([0-9]{2})[^0-9]([0-9]{4})[^0-9]([0-9]{2})[^0-9]([0-9]{2})[^0-9]([0-9]{2}).*/\3\2\1\4\5.\6/'`
    elif
        [[ "$filename" =~ [0-9]{8} ]]
    then
        timestamp=`echo "$filename" | sed -E 's/.*([0-9]{8}).*/\11200.00/'`
    elif
        [[ "$filename" =~ [0-9]{4}[^0-9][0-9]{2}[^0-9][0-9]{2}[^0-9]+[0-9]{2}[^0-9][0-9]{2}[^0-9][0-9]{2} ]]
    then
        timestamp=`echo "$filename" | sed -E 's/.*([0-9]{4})[^0-9]([0-9]{2})[^0-9]([0-9]{2})[^0-9]+([0-9]{2})[^0-9]([0-9]{2})[^0-9]([0-9]{2}).*/\1\2\3\4\5.\6/'`
    else
        echo "Could not extract timestamp from file '$filepath'" >&2
        exit_code=1
        continue
    fi

    ## Check if timestamp is well-formed

    if
        [[ ! "$timestamp" =~ ^[0-9]{12}\.[0-9]{2}$ ]]
    then
        echo "Internal error: Ill-formed timestamp '$timestamp' from file '$filepath'" >&2
        exit 1
    fi

    ## Extract extension from filename

    if
        [[ "$filename" =~ \. ]]
    then
        extension=".${filename##*.}"
    else
        extension=""
    fi

    ## Calculate file hash

    filehash=`sha256sum -- "$filepath" | awk '{ print $1 }'`

    if
        [[ -z "$filehash" ]]
    then
        echo "Internal error: Could not compute the SHA-1 hash of '$filepath'" >&2
        exit 1
    fi

    ## Construct new filename

    datestring=`echo $timestamp | sed -E 's/([0-9]{4})([0-9]{2})([0-9]{2})([0-9]{2})([0-9]{2})\.([0-9]{2})/\1-\2-\3_\4-\5-\6/'`

    if
        [[ ! $datestring =~ ^[0-9]{4}-[0-9]{2}-[0-9]{2}_[0-9]{2}-[0-9]{2}-[0-9]{2}$ ]]
    then
        echo "Internal error: Ill-formed CCYY-MM-DD_HH-mm-ss date string '$datestring'" >&2
        exit 1
    fi

    shortened_filehash=`echo $filehash | head -c5`

    if
        [[ ! $shortened_filehash =~ ^[0-9a-fA-F]+$ ]]
    then
        echo "Internal error: Ill-formed hexstring '$shortened_filehash'" >&2
        exit 1
    fi

    newfilepath=${directory}/${datestring}__${shortened_filehash}${extension}

    ## Check if new filepath points to a non-existing file or file of equal hash

    if
        [[ -f "$newfilepath" ]]
    then
        newfilehash=`sha256sum "$newfilepath" | awk '{ print $1 }'`

        if
            [[ "$filehash" != "$newfilehash" ]]
        then
            echo "Cannot overwrite file '$newfilepath' with different hash than '$filepath'" >&2
            exit_code=1
            continue
        fi
    elif
        [[ -d "$newfilepath" ]]
    then
        echo "Cannot overwrite '$newfilepath', because it is a directory" >&2
        exit_code=1
        continue
    fi

    ## Adjust timestamp of file

    touch -t "$timestamp" -- "$filepath"

    ## Rename file (if new path is different)

    if
        [[ ! "$filepath" -ef "$newfilepath" ]]
    then
        mv -v "$filepath" "$newfilepath"
    fi
done

## Exit with code

exit $exit_code
